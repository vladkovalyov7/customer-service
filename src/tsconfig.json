{
    "compilerOptions": {
      "target": "ES6", // Or whichever version of JavaScript you're targeting
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  